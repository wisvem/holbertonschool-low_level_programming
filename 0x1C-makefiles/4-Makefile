# task 2
# Variable for gcc
CC = gcc
# Variable for all .c files
SRC = main.c holberton.c
# Variable for all o files
OBJ = $(SRC:.c=.o)
# OUTPUT NAME
NAME = holberton
# Variable to delete files
RM = rm -f *~
# Variable for compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic
all: $(OBJ)
	$(CC) $(CLFGAS) $(OBJ) -o $(NAME)
clean:
	$(RM) $(NAME)
oclean:
	$(RM) $(OBJ)
fclean:
	$(RM) $(NAME) $(OBJ)
re: oclean
	$(CC) $(CLFGAS) $(OBJ) -o $(NAME)
