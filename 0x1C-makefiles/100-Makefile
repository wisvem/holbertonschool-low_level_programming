# task 6
# Variable for gcc
CC = gcc -Wall -Werror -Wextra -pedantic
# Variable for all .c files
SRC = main.c holberton.c
# Variable for all o files
OBJ = $(SRC:.c=.o)
# OUTPUT NAME
NAME = holberton
# Variable for compiler flags implicit
CFLAGS = -Wall -Werror -Wextra -pedantic
.PHONY: all clean oclean fclean
all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
clean:
	$(RM) *~ $(NAME)
oclean:
	$(RM) $(OBJ)
fclean: clean oclean
re: oclean all
